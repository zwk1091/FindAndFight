<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.findandfight.MainActivity">

    <ImageView
        android:id="@+id/meetMasterImage"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#5E5E5E"
        android:src="@mipmap/master"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/fight"
        android:layout_width="80dp"
        android:layout_height="40dp"
        android:layout_marginLeft="120dp"
        android:background="#B4B4B4"
        android:text="战斗"
        android:textColor="@android:color/white"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/escape"
        app:layout_constraintTop_toBottomOf="@id/guideline" />

    <Button
        android:id="@+id/escape"
        android:layout_width="80dp"
        android:layout_height="40dp"
        android:layout_marginRight="130dp"
        android:background="#B4B4B4"
        android:text="逃跑"
        android:textColor="@android:color/white"
        app:layout_constraintLeft_toRightOf="@id/fight"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/guideline" />

    <android.support.constraint.Guideline
        android:id="@+id/guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.69" />

    <android.support.constraint.Guideline
        android:id="@+id/guideline2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.13" />
    <Button
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:id="@+id/close"
        android:background="#00000000"
        app:layout_constraintTop_toBottomOf="@id/guideline2"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="170dp"
        />

</android.support.constraint.ConstraintLayout>
